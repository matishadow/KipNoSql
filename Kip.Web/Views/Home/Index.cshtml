@{
    ViewBag.Title = "Projekt DocumentDB";
}
@model Kip.Models.BaseCollections


<div class="jumbotron">
    <h1>Kip</h1>
    <p class="lead">System do zarzadzania publikacjami</p>
</div>

<div class="container-fluid">

    <div class="row">

        <div class="col-md-3">
            <div class="list-group">
                @Ajax.ActionLink("Książki", "Books", null, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "collection-container"}, new { @class = "list-group-item" })
                @Ajax.ActionLink("Ebooki", "EBooks", null, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "collection-container" }, new { @class = "list-group-item" })
                @Ajax.ActionLink("Gry video", "GameDiscs", null, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "collection-container" }, new { @class = "list-group-item" })
                @Ajax.ActionLink("Czasopisma", "Magazines", null, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "collection-container" }, new { @class = "list-group-item" })
                @Ajax.ActionLink("Filmy", "MovieDvds", null, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "collection-container" }, new { @class = "list-group-item" })
                @Ajax.ActionLink("Muzyka", "MusicCds", null, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "collection-container" }, new { @class = "list-group-item" })
            </div>
        </div>

        <div class="col-md-9" id="collection-container">
            
        </div>
    </div>
</div>